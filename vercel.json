{
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "requirements.txt",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 60,
                "buildCommand": "python -m pip install -r requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}
